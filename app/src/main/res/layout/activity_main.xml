<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffd1dc"
    tools:context="com.kjp.sampleapp.MainActivity">

    <LinearLayout
        android:id="@+id/app_name_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Would You"
            android:layout_gravity="center_vertical"
            android:textSize="24sp"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/rocketship"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >

        <TextView
            android:id="@+id/koreanBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Korean"
            android:layout_marginBottom="15dp"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/englishBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:layout_marginBottom="15dp"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/chineseBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chinese"
            android:textSize="24sp"/>
    </LinearLayout>


</RelativeLayout>
